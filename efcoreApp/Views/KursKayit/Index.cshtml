@model IEnumerable<KursKayit>
<h2>Öðrenci Listesi</h2>
<hr />
<a href="/KursKayit/Create" class="btn btn-primary">Öðrenci Ekle</a>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(m => m.KayitId)</th>
            <th>@Html.DisplayNameFor(m => m.ogrenci.OgrenciAd)</th>
            <th>@Html.DisplayNameFor(m => m.kurs.Baslik)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.KayitId)</td>
                <td>@Html.DisplayFor(modelItem => item.ogrenci.AdSoyad)</td>
                <td>@Html.DisplayFor(modelItem => item.kurs.Baslik)</td>
                <td>
                    <a asp-asp-controller="KursKayit" asp-action="Edit" asp-route-id="@item.KayitId" class="btn btn-sm btn-primary">Edit</a>
                    <a asp-asp-controller="KursKayit" asp-action="Delete" asp-route-id="@item.KayitId" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }

    </tbody>
</table>