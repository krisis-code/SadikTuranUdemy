@model UserInfo
@{
    ViewBag.Title = "Başvuru Durumu";
}
<main class="text-center">
    
    <h1 class="h4">Başvuru Durumu</h1>




    
    @if(Model.WillAttend == true)
    {
        <p>Teşekkürler , @Model.Name Toplantıya sizinle birlikte @ViewBag.UserCount kişi katılıyor</p>
    
        <a class="btn btn-sm btn btn-outline-primary" href="/meeting/apply">Katılımcıları Listele</a>
    }else
    {
        <p> @Model.Name , Katılmadığından solayo üzgünüz.</p>
        <a class="btn btn-sm btn btn-outline-primary" href="/meeting/apply">Başvuru Formu</a>
    }
   

</main>